<Window x:Class="SYAPSU.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SYAPSU"
        xmlns:localx="clr-namespace:SYAPSU.User_controls"
        mc:Ignorable="d"
        Title="TaskWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch"/>
        <Label x:Name="labelName" Content="Label" Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
        <Label x:Name="labelParam" Content="Label" Grid.Row="2" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
    </Grid>
</Window>
